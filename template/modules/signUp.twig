{% block signUpModule %}
    <form method="POST">
        <div>
            <label for="firstName">Firstname:</label>
            <input type="text" id="firstName" name="firstName"/>
        </div>
        <div>
            <label for="lastName">Lastname:</label>
            <input type="text" id="lastName" name="lastName"/>
        </div>
        <div>
            <label for="userName">Username:</label>
            <input type="text" id="userName" name="userName"/>
        </div>
        <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password"/>
        </div>
        <div>
            <label for="passwordConfirm">Re-Password:</label>
            <input type="password" id="passwordConfirm" name="passwordConfirm"/>
        </div>
        <div>
            <label for="email">E-mail:</label>
            <input type="email" id="email" name="email"/>
        </div>
        <div>
            <label for="dateOfBirth">Date of Birth:</label>
            <input type="text" name="dateOfBirth[year]" id="dateOfBirth" size="2" maxlength="4"/>
            <input type="text" name="dateOfBirth[month]" size="1" maxlength="2"/>
            <input type="text" name="dateOfBirth[day]" size="1" maxlength="2"/>
        </div>
        <div>
            <input type="submit" name="sendSignUp" value="Register">
            <input type="reset" name="resetSignUp" value="Reset">
        </div>
    </form>
{% endblock %}